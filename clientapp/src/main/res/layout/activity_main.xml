<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="vamz.kst.fri.clientapp.MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect to Service"
            android:id="@+id/button_connection"
            android:onClick="hook_service"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_search"
            android:hint="Some search string"
            android:layout_below="@+id/text_result"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/text_result"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/button_connection" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search..."
            android:id="@+id/button_search"
            android:layout_below="@+id/editText_search"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:onClick="bt_search" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_below="@+id/button_search"
            android:layout_alignParentStart="true"
            android:layout_marginTop="29dp"
            android:layout_alignParentEnd="true"
            android:hint="Write some data to save" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/button_add"
            android:layout_below="@+id/editText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:onClick="bt_add" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView_stats"
            android:layout_below="@+id/button_add"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh stats"
            android:id="@+id/button"
            android:layout_below="@+id/textView_stats"
            android:layout_alignParentStart="true"
            android:layout_marginTop="37dp"
            android:layout_alignParentEnd="true"
            android:onClick="bt_refreshStats" />
</RelativeLayout>
